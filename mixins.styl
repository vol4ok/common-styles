@import "mixins.vendors"
@import "mixins.gradients"

-pos(type, args)
  i = 0
  position: unquote(type)
  if args[0] is 'all'
    val = args[1] is a 'unit' ? args[1] : 0
    top: val
    left: val
    right: val
    bottom: val
  else
    if args[i]
      {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    if args[i + 1]
      {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    if args[i + 1]
      {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    if args[i + 1]
      {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    
fixed()
  -pos('fixed', arguments)

absolute()
  -pos('absolute', arguments)

relative()
  -pos('relative', arguments)

clearfix()
  *zoom: 1
  &:before, &:after
    display: table
    content: ""
  &:after 
    clear: both

tab-focus()
  outline: thin dotted
  outline: 5px auto -webkit-focus-ring-color
  outline-offset: -2px

center-block()
  display: block
  margin-left: auto
  margin-right: auto
  
vcenter-block-wrap()
  display: table
  height: 100%

vcenter-block()
  height: 100%
  display: table-cell
  vertical-align: middle
  
container-fixed($width = GRID_ROW_WIDTH)
  width: $width
  margin-left: auto
  margin-right: auto
  clearfix()


resizable(direction = both)
  resize: direction
